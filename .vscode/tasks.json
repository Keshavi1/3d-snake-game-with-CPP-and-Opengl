{
	"version": "2.0.0",
	"tasks": [
		//build c/cpp files
		{	
			"type": "cppbuild",
			"label": "C: gcc.exe build active file",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Wextra",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			
			"detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
		},
		{
			"type": "cppbuild",
			"label": "C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Wextra",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			
			"problemMatcher": [
				"$gcc"
			],
			
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		},
		// openglbuild
		{
			"type": "shell",
			"label": "C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-Wextra",
				"-I${workspaceFolder}/include",
				"-L${workspaceFolder}/lib",				
				"${workspaceFolder}/src/\\*.cpp",				
				"${workspaceFolder}/src/glad.c",
    			"-lglfw3dll",
				"-o",
    			"${workspaceFolder}/myprogram.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		},


		// build and rune c/cpp files
		{
			"type": "shell",
			"label": "Run C file: gcc.exe",
			"command": "C:\\MinGW\\bin\\gcc.exe -g -Wall -Wextra ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe; ${fileDirname}\\${fileBasenameNoExtension}.exe",
			"args": [],
			"options": {
				"cwd": "C:\\MinGW\\bin"
			},
			
			"problemMatcher": [
				"$gcc"
			],
			"detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
		},
		{
			"type": "shell",
			"label": "Run C++ file: g++.exe",
			"command": "C:\\MinGW\\bin\\g++.exe -g -Wall -Wextra ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe; ${fileDirname}\\${fileBasenameNoExtension}.exe",
			"args": [],
			"options": {
				"cwd": "C:\\MinGW\\bin"
			},
			
			"problemMatcher": [
				"$gcc"
			],
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}